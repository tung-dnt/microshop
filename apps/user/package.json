  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:push": "pnpm drizzle-kit push:pg --config=../../packages/database/configs/user.config.ts",
    "db:generate": "pnpm drizzle-kit generate:pg --config=../../packages/database/configs/user.config.ts",
    "db:migrate": "SERVICE_NAME=user npx ts-node ../../packages/database/migrations/index.ts"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.2.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.16",
    "@shared/database": "workspace:^1.0.0",
    "@shared/env": "workspace:^1.0.0",
    "@shared/providers": "workspace:^",
    "@shared/utils": "workspace:*",
    "aws-sdk": "^2.1339.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.2.3",
