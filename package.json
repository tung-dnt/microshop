{
  "name": "microshop",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "start:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "init:dev": "./scripts/init.dev.sh",
    "create:service": "./scripts/add_service.sh",
    "create:db": "./scripts/init_db.sh",
    "remove:service": "./scripts/remove_service.sh"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.11"
}