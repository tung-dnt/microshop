{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Microshop Gateway",
  "timeout": "3000ms",
  "output_encoding": "no-op",
  "cache_ttl": "300s",
  "disable_rest": true,
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "http://localhost",
        "http://localhost:5173",
        "http://nginx:80"
      ],
      "expose_headers": ["Content-Length", "Content-Type"],
      "max_age": "12h",
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS",
        "PATCH"
      ],
      "allow_credentials": true
    },
    "auth/validator": {
      "shared_cache_duration": 900
    },
    "qos/ratelimit/service": {
      "capacity": 1000,
      "client_max_rate": 100,
      "key": "",
      "strategy": "ip",
      "client_capacity": 10,
      "max_rate": 1000,
      "every": "10s"
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/v1/auth/me",
      "method": "GET",
      "concurrent_calls": 1,
      "input_query_strings": ["*"],
      "input_headers": ["User-Agent", "Authorization"],
      "backend": [
        {
          "url_pattern": "/api/users/profile",
          "method": "GET",
          "host": ["http://user:5000"],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "jwk_url": "http://keycloak:8080/realms/microshop/protocol/openid-connect/certs",
          "cache": true,
          "disable_jwk_security": true,
          "operation_debug": true,
          "issuer": "http://localhost:8080/realms/microshop",
          "audience": ["account"]
        }
      }
    }
  ]
}
